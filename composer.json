{
  "name": "mguinea/laravel-translatable",
  "description": "Laravel package to make Eloquent models attributes translatables",
  "keywords": [
    "translatable",
    "localization",
    "translations",
    "eloquent",
    "laravel"
  ],
  "homepage": "https://github.com/mguinea/laravel-translatable",
  "type": "laravel-package",
  "license": "MIT",
  "authors": [
    {
      "name": "Marc Guinea",
      "email": "develop.marcguinea@gmail.com",
      "homepage": "https://www.marcguinea.com"
    }
  ],
  "require": {
    "php": "^8.0",
    "illuminate/database": "^11.0",
    "illuminate/support": "^11.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "orchestra/testbench": "^9.0"
  },
  "autoload": {
    "psr-4": {
      "Mguinea\\Translatable\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Mguinea\\Translatable\\Tests\\": "tests"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "test-coverage": "phpunit --coverage-html coverage"
  },
  "config": {
    "sort-packages": true
  },
  "extra": {
    "laravel": {
      "providers": [
        "Mguinea\\Translatable\\TranslatableServiceProvider"
      ]
    }
  }
}
